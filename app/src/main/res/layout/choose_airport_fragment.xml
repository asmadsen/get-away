<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="androidx.lifecycle.MutableLiveData" />
        <import type="no.asmadsen.getaway.room.entities.AirportWithCity" />
        <variable
            name="airportName"
            type="MutableLiveData&lt;String>" />
        <variable
            name="airport"
            type="MutableLiveData&lt;AirportWithCity>" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ChooseAirport">
        <no.asmadsen.getaway.widgets.ChooseAirportView
            android:id="@+id/chooseAirportView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionName="chooseAirportView"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:editable="true"
            app:search="@={ airportName }"
            app:airportName="@{ airport.name ?? `` }"
            app:airportIata="@{ airport.iata ?? `` }"
            app:airportCity="@{ airport.city.name ?? `` }"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/chooseAirportRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chooseAirportView"
            tools:listitem="@layout/airport_item" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>